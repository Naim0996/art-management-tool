# Application Configuration
PORT=3000
ENVIRONMENT=production

# Auto-Migration & Seeding
AUTO_MIGRATE=false
AUTO_SEED=false

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=artuser
DB_PASSWORD=artpassword
DB_NAME=artmanagement
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://giorgiopriviteralab.com

# Payment Configuration
PAYMENT_PROVIDER=mock
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Shopify Integration (Optional)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SHOP_DOMAIN=
SHOPIFY_ACCESS_TOKEN=

# Etsy Integration Configuration
ETSY_API_KEY=
ETSY_API_SECRET=
ETSY_SHOP_ID=
ETSY_SHOP_NAME=
ETSY_SHOP_URL=
ETSY_ACCESS_TOKEN=
ETSY_API_BASE_URL=https://openapi.etsy.com/v3

# Etsy Payment Configuration
ETSY_PAYMENT_CALLBACK_URL=http://giorgiopriviteralab.com:3000/checkout/success

# Etsy Synchronization Settings
ETSY_SYNC_ENABLED=false
ETSY_SYNC_INTERVAL_PRODUCTS=3600
ETSY_SYNC_INTERVAL_INVENTORY=1800
ETSY_RATE_LIMIT_REQUESTS=10000
ETSY_RATE_LIMIT_WINDOW=86400

# Scheduler Configuration
SCHEDULER_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
# Frontend Configuration
NEXT_PUBLIC_API_URL=http://giorgiopriviteralab.com
BACKEND_URL=http://giorgiopriviteralab.com:8080
NODE_ENV=development

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
UPLOAD_BASE_DIR=./uploads
