# Production Environment Configuration
PORT=8080
ENVIRONMENT=production

# Auto-Migration & Seeding
AUTO_MIGRATE=true
AUTO_SEED=false

# Database Configuration (use production database)
DB_HOST=production-postgres
DB_PORT=5432
DB_USER=artuser_prod
DB_PASSWORD=CHANGEME-PRODUCTION-PASSWORD
DB_NAME=artmanagement_prod
DB_SSLMODE=require

# JWT Configuration
JWT_SECRET=CHANGEME-PRODUCTION-JWT-SECRET

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://artmanagement.tool,https://www.artmanagement.tool

# Payment Configuration (use live keys)
PAYMENT_PROVIDER=stripe
STRIPE_API_KEY=sk_live_PRODUCTION_KEY
STRIPE_WEBHOOK_SECRET=whsec_PRODUCTION_SECRET

# Etsy Integration Configuration (use production credentials)
ETSY_API_KEY=PRODUCTION_API_KEY
ETSY_API_SECRET=PRODUCTION_API_SECRET
ETSY_SHOP_ID=PRODUCTION_SHOP_ID
ETSY_ACCESS_TOKEN=PRODUCTION_ACCESS_TOKEN
ETSY_API_BASE_URL=https://openapi.etsy.com/v3

# Etsy Synchronization Settings
ETSY_SYNC_ENABLED=true
ETSY_SYNC_INTERVAL_PRODUCTS=7200
ETSY_SYNC_INTERVAL_INVENTORY=3600
ETSY_RATE_LIMIT_REQUESTS=10000
ETSY_RATE_LIMIT_WINDOW=86400

# Scheduler Configuration
SCHEDULER_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
