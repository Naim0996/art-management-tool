# Test Environment Configuration
# This file provides default values for testing and CI
# No external services required - uses in-memory/mock providers

# Application Configuration
PORT=8080
ENVIRONMENT=test

# Auto-Migration & Seeding
AUTO_MIGRATE=true
AUTO_SEED=false

# Database Configuration (SQLite for testing)
DB_HOST=localhost
DB_PORT=5432
DB_USER=testuser
DB_PASSWORD=testpassword
DB_NAME=artmanagement_test
DB_SSLMODE=disable
# For SQLite in tests, use: sqlite://:memory: or sqlite://test.db

# JWT Configuration
JWT_SECRET=test-secret-key-for-testing-only

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Payment Configuration (Mock Provider)
PAYMENT_PROVIDER=mock
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Shopify Integration (Disabled for testing)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SHOP_DOMAIN=
SHOPIFY_ACCESS_TOKEN=

# Etsy Integration (Disabled for testing)
ETSY_API_KEY=
ETSY_API_SECRET=
ETSY_SHOP_ID=
ETSY_SHOP_NAME=
ETSY_SHOP_URL=
ETSY_ACCESS_TOKEN=
ETSY_API_BASE_URL=https://openapi.etsy.com/v3
ETSY_PAYMENT_CALLBACK_URL=http://localhost:3000/checkout/success

# Etsy Synchronization Settings (Disabled)
ETSY_SYNC_ENABLED=false
ETSY_SYNC_INTERVAL_PRODUCTS=3600
ETSY_SYNC_INTERVAL_INVENTORY=1800
ETSY_RATE_LIMIT_REQUESTS=10000
ETSY_RATE_LIMIT_WINDOW=86400

# Scheduler Configuration (Disabled for testing)
SCHEDULER_ENABLED=false

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text
