# Staging Environment Configuration
PORT=8080
ENVIRONMENT=staging

# Database Configuration (use staging database)
DB_HOST=staging-postgres
DB_PORT=5432
DB_USER=artuser_staging
DB_PASSWORD=changeme-staging
DB_NAME=artmanagement_staging
DB_SSLMODE=require

# JWT Configuration
JWT_SECRET=changeme-staging-jwt-secret

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging.artmanagement.tool

# Payment Configuration (use test keys)
PAYMENT_PROVIDER=stripe
STRIPE_API_KEY=sk_test_staging_key
STRIPE_WEBHOOK_SECRET=whsec_staging_secret

# Etsy Integration Configuration (use test credentials)
ETSY_API_KEY=staging_api_key
ETSY_API_SECRET=staging_api_secret
ETSY_SHOP_ID=staging_shop_id
ETSY_ACCESS_TOKEN=staging_access_token
ETSY_API_BASE_URL=https://openapi.etsy.com/v3

# Etsy Synchronization Settings
ETSY_SYNC_ENABLED=true
ETSY_SYNC_INTERVAL_PRODUCTS=3600
ETSY_SYNC_INTERVAL_INVENTORY=1800
ETSY_RATE_LIMIT_REQUESTS=10000
ETSY_RATE_LIMIT_WINDOW=86400

# Scheduler Configuration
SCHEDULER_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
